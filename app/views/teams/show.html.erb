<% title(@team.name, "Teams") %>
<h2><%= @team.name %></h2>
  <div id='team'>
    <div id="actions">
        <%= link_to 'New Todo', new_team_todo_path(@team) %> |
        <%= link_to 'Edit Team', edit_team_path(@team) %> |
        <%= link_to 'Delete Team', (@team),
              method: :delete,
              confirm: "Are you sure you want to delete this team?" %> |
        <%= link_to 'Back', '/' %>
    </div>
  </div>
  <ul id='todos'>
    <% @team.todos.each do |todo| %>
      <h4>
        <%="#{todo.member_id} needs to #{todo.what} #{todo.when_string}"%>
      </h4>
        <div id="actions">
          <%= link_to 'Edit', [:edit, @team, todo] %> |
          <%= link_to 'Delete', [@team, todo],
                method: :delete,
                confirm: "Are you sure you want to delete this todo?" %>
        </div>
      <% end %>
  </ul>
